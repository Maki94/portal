@using System.Globalization
@model List<Data.DataClasses.Project>

@{
    ViewBag.Title = "Projects";
}
<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
        <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
            <main class="mdl-layout__content">

                <form action="#" method="post">
                    <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
                        <input type="checkbox" id="checkbox-1" class="mdl-checkbox__input" checked>
                        <span class="mdl-checkbox__label">JF</span>
                    </label>

                    <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-2">
                        <input type="checkbox" id="checkbox-2" class="mdl-checkbox__input" checked>
                        <span class="mdl-checkbox__label">TEDX</span>
                    </label>
                    <div id="member-year">
                        <input class="mdl-slider mdl-js-slider" type="range"
                               min="2007" max="2016" value="2007" step="1" tabindex="0">
                    </div>
                </form>

                <div class="mdl-grid">
                    @foreach (var m in Model)
                    {
                        <div class="mdl-card mdl-cell mdl-cell--2-col-desktop mdl-cell--4-col-tablet mdl-cell--12-col-phone mdl-shadow--2dp">
                            <figure class="mdl-card__media">
                                <img src="http://tfirdaus.github.io/mdl/images/laptop.jpg" alt=""/>
                            </figure>
                            <div class="mdl-card__title">
                                <h1 class="mdl-card__title-text">@Html.DisplayName(m.Name)</h1>
                            </div>
                            <div class="mdl-card__supporting-text">
                                <p>@Html.DisplayName(m.Description)</p>
                                <p>@Html.DisplayName(m.State.ToString())</p>
                            </div>
                            <div class="mdl-card__actions mdl-card--border">
                                
                                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Opsirnije</a>
                                
                                <div class="mdl-layout-spacer"></div>
                                
                                <button class="mdl-button mdl-button--icon mdl-button--colored">
                                    <i class="material-icons">share</i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </main>
        </div>
    </main>
</div>