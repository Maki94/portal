@using WebGrease.Css.Extensions
@model List<Data.DataClasses.Project>

@{
    ViewBag.Title = "Projects";
}
<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
        <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
            <main class="mdl-layout__content">

                <div class="mdl-grid">
                    @foreach (var m in Model)
                    {
                        <div class="mdl-card mdl-cell mdl-cell--2-col-desktop mdl-cell--4-col-tablet mdl-cell--12-col-phone mdl-shadow--2dp">
                            <figure class="mdl-card__media">
                                <img src="http://tfirdaus.github.io/mdl/images/laptop.jpg" alt=""/>
                            </figure>
                            <div class="mdl-card__title">
                                <h1 class="mdl-card__title-text">@Html.DisplayName(m.Name)</h1>
                            </div>
                            <div class="mdl-card__supporting-text">
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam accusamus, consectetur.</p>
                            </div>
                            <div class="mdl-card__actions mdl-card--border">
                                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Read More</a>
                                <div class="mdl-layout-spacer"></div>
                                <button class="mdl-button mdl-button--icon mdl-button--colored">
                                    <i class="material-icons">favorite</i>
                                </button>
                                <button class="mdl-button mdl-button--icon mdl-button--colored">
                                    <i class="material-icons">share</i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </main>
        </div>
    </main>
</div>