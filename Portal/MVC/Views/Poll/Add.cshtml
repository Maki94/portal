@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1/jquery-ui.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.timepicker.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.timepicker.min.js"></script>

<script type="text/javascript">
    $(window).bind('load', function () {
        $(".datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
    });

    $(function () {
        $('.time').timepicker({ 'timeFormat': 'H:i:s' });
    });

    $('button.more-options-button').on('click', function() {
        var lastOption = $(this).prev();
        var newOptionId = lastOption.data("option-id") + 1;
        if (newOptionId < 7) {
            var newOption = lastOption.clone();
            newOption.attr('id', 'Options_' + newOptionId + '_');
            newOption.attr('name', "Options[" + newOptionId + "]");
            newOption.data("option-id", newOptionId);
            newOption.insertAfter(lastOption);
            if (newOptionId >= 6) {
                $(this)[0].MaterialButton.disable();
            }
        }
    });

    jQuery.validator.unobtrusive.adapters.addBool("optionlist", "required");
</script>



